<resources>
    <!-- Base application theme. -->
    <style name="Theme.KotlinMVVMToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/back_light</item>
        <item name="colorPrimaryDark">@color/back_light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/Blue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.date" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/Blue</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:colorForeground">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:popupBackground">@color/back_elevated</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">


        <item name="colorSwitchThumbNormal">@color/back_elevated
        </item>

        <item name="android:colorForeground">@color/Support_Overlay
        </item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:popupBackground">@color/back_elevated</item>
    </style>


</resources>